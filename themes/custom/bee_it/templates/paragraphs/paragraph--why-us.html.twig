<section class="b-slider b-why-us bg-gray">
    <div class="b-slider__layout">
        <div class="b-slider__left-side">
            <h2 class="b-slider__title h2">{{ content.field_title }}</h2>
            <div class="b-slider__sub-title">{{ content.field_subtitle }}</div>
            <p class="b-slider__text">{{ content.field_description }}</p>
            <a href="{{ content.field_link.0['#url'] }}" class="l-btn l-btn--green" >{{ content.field_link.0['#title'] }}</a>
        </div>
        <div class="b-slider__right-side">
          {{ elements.field_slider }}
        </div>
    </div>
</section>